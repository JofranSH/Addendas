@model List<WebApplication1.Models.ViewModels.Addendas.ListarAddendas>
@{
    ViewBag.Title = "Registros";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-xs-2 text-right">
            <a href="~/Addendas/NuevoRegistro" class="btn btn-primary">Nuevo Registro</a>
        </div>
    </div>
    <br />
    <div class="table-container table-hover">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="bg-info">
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>XML</th>
                    <th>Fecha de Modificacion</th>
                    <th>Usuario</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Elemento in Model.Where(e => e.Estado == true))
                {
                    <tr>
                        <td>@Elemento.IdAddenda</td>
                        <td>@Elemento.NombreAddenda</td>
                        <td>@(Elemento.XML.Length > 50 ? Elemento.XML.Substring(0, 50) + "..." : Elemento.XML)</td>
                        <td>@Elemento.FechaModificacion</td>
                        <td>@Elemento.Usuario</td>
                        <td>@Elemento.Estado</td>
                        <td>
                            <a class="btn btn-warning" href="~/Addendas/EditarRegistro/@Elemento.IdAddenda"><i class="fa-solid fa-pen-to-square fa-fade"></i></a>
                            <a class="btn btn-danger" href="~/Addendas/CambiarEstado/@Elemento.IdAddenda"><i class="fa-solid fa-trash fa-fade"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
